@model ProductDetailModel


<div class="row ">
    <div class="col-md-3">
        <img src="~/images/@Model.Product.ImageUrl" class="img-fluid">
    </div>
    <div class="col-md-9">
        <h1 class="mb-3">@Model.Product.Name</h1> <hr>
        
            @foreach (var category in @Model.Categories){
               <a asp-controller="shop" asp-action="list" asp-route-category="@category.Url" class="btn btn-link p-0 mb-3"> @category.Name</a>
            }
       
        <div class="mb-3">
            
            <h4 class="text-primary mb-3">
                <i class="fas fa-lira-sign"></i>@Model.Product.Price 
            </h4> 

            <form asp-controller="Cart" asp-action="AddToCart" class="form-inline">
                <input type="hidden" name="productId" value="@Model.Product.ProductId">
                <div class="input-group mb-3">
                    <input type="number" name="quantity" width="100px" class="form-control" min="1" step="1" value="1">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-cart-plus"></i>Add To Cart</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="p-3">@Html.Raw(Model.Product.Description)</p>
    </div>
</div>
