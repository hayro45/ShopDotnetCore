@model IEnumerable<User>

    @section Css{
        <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap4.min.css">
    }
    @section Scripts{
        <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap4.min.js"></script>
        <script>
            $(document).ready( function (){
                let table = new DataTable('#myTable');
            });
        </script>
    }
<h1>User List</h1>
<hr>
<a href="/admin/user/create" class="btn btn-primary btn-sm">Create User</a>
<hr>
<table id="myTable" class="table table-bordered">
    <thead>
        <tr>
            <td>FirstName</td>
            <td>LastName</td>
            <td>UserName</td>
            <td>Email</td>
            <td>EmailConfirmed</td>
            <td class="width:160px"></td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr class="@(item.EmailConfirmed?"":"bg-warning")">
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.EmailConfirmed</td>

                    <td>
                        <a href="/admin/user/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>
                        
                        <form action="/admin/user/delete" method="POST" style="display: inline;">
                            <input type="hidden" name="UserId" value="@item.Id">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }else{
            <div class="alert alert-warning">
                <h3>No Users!</h3>
            </div>
        }
        
    </tbody>
</table>